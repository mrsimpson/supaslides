{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "node"
    ]
  }
}
